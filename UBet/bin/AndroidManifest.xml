<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ubet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="AuthenticatationService">
		<intent-filter>
			<action android:name="android.accounts.AccountAuthenticator"></action>
			</intent-filter>
			<meta-data android:name="android.accounts.AccountAuthenticator" android:resource="@xml/authenticator">
		</meta-data></service>
        <activity
            android:name="com.ubet.activity.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ubet.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.ubet.activity.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ubet.activity.StartActivity" />
        </activity>
        <activity
            android:name="com.ubet.activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.example.ubet.StartActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ubet.activity.StartActivity" />
        </activity>
    </application>

</manifest>
